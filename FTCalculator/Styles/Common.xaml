<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Colors -->
    <Color x:Key="EqualsButtonBlue">#005A9E</Color>
    <Color x:Key="ButtonGrey">#F9F9F9</Color>
    <Color x:Key="BackgroundGrey">#F3F3F3</Color>
    
    <!-- Brushes -->
    <SolidColorBrush x:Key="EqualsButtonBlueBrush" Color="{StaticResource EqualsButtonBlue}"/>
    <SolidColorBrush x:Key="ButtonGreyBrush" Color="{StaticResource ButtonGrey}"/>
    <SolidColorBrush x:Key="BackgroundGreyBrush" Color="{StaticResource BackgroundGrey}"/>
</ResourceDictionary>